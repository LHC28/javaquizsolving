package 쎀촍;

public class Main {

	public static void main(String[] args) {

		Lion lion = new Lion("牡",10,200);
		Monkey monkey = new Monkey("呼첇",5,100);
		Elephant elephant = new Elephant("컠씩쟕",7,300);
		
		lion.eat();
		lion.sleep();
		
		lion.bark = "챶쟊잉";
		lion.bite();
		lion.fight();
		
		System.out.println("======================");
		
		monkey.eat();
		monkey.sleep();
		
		monkey.bark = "陞뭡";
		monkey.climb();
		monkey.whisk();
		
		System.out.println("======================");
		
		elephant.eat();
		elephant.sleep();
		
		elephant.bark = "씩첇첇";
		elephant.nose();
		elephant.mud();
		
	}

}
